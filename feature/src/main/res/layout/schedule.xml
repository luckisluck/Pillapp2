<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@drawable/gradle"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/moon"
                android:text="Schedule"
                android:textColor="#FFFFFF"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView4"
                android:layout_marginEnd="7dp"
                android:layout_toStartOf="@+id/textView4"
                android:tint="#FFFFFF"
                app:srcCompat="@drawable/ic_event_black_24dp" />


        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="540dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="320dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:backgroundTint="#FFFFFF">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="32dp"
                    android:foregroundGravity="center"
                    app:srcCompat="@drawable/pill_bottle" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="46dp"
                    android:layout_toEndOf="@+id/imageView3"
                    android:fontFamily="@font/moon"
                    android:text="Bottom 1"
                    android:textColor="#FF5555"
                    android:textSize="25dp" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="320dp"
            android:layout_height="120dp"
            android:layout_alignStart="@+id/cardView"
            android:layout_below="@+id/cardView"
            android:layout_marginTop="18dp"
            android:backgroundTint="#FFFFFF">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_alignStart="@+id/cardView"
                android:layout_below="@+id/cardView"
                android:layout_marginTop="10dp">


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="13dp"
                    android:foregroundGravity="center"
                    app:srcCompat="@drawable/pill_bottle" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView2"
                    android:layout_marginStart="46dp"
                    android:layout_marginTop="18dp"
                    android:layout_toEndOf="@+id/imageView2"
                    android:text="Bottom 2"
                    android:fontFamily="@font/moon"
                    android:textColor="#FF5555"
                    android:textSize="25dp" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="320dp"
            android:layout_height="120dp"
            android:layout_alignStart="@+id/cardView2"
            android:layout_below="@+id/cardView2"
            android:layout_marginTop="19dp"
            android:backgroundTint="#FFFFFF">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_alignStart="@+id/cardView2"
                android:layout_below="@+id/cardView2"
                android:layout_marginTop="16dp">


                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:foregroundGravity="center"
                    app:srcCompat="@drawable/pill_bottle" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView1"
                    android:layout_marginStart="48dp"
                    android:layout_marginTop="17dp"
                    android:layout_toEndOf="@+id/imageView1"
                    android:text="Bottom 3"
                    android:fontFamily="@font/moon"
                    android:textColor="#FF5555"
                    android:textSize="25dp" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/cardView4"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="108dp"
            android:background="@drawable/rounde_butt"
            android:fontFamily="@font/moon"
            android:text="Alarm"
            android:textColor="#FFFFFF" />


    </RelativeLayout>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavView_Bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/main_menu" />


</LinearLayout>