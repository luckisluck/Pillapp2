<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradle">


    <Button
        android:id="@+id/button7"
        android:layout_width="101dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/imageView7"
        android:layout_below="@+id/textView15"
        android:layout_marginTop="48dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/moon"
        android:onClick="take"
        android:text="Take Pill" />

    <Button
        android:id="@+id/button11"
        android:layout_width="101dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/button7"
        android:layout_alignBottom="@+id/button7"
        android:layout_alignEnd="@+id/imageView7"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/moon"
        android:onClick="stooooop"
        android:text="Stop Alarm" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="372dp"
        android:layout_height="130dp"
        android:layout_below="@+id/imageView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/moon"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        app:srcCompat="@drawable/alarm" />


</RelativeLayout>