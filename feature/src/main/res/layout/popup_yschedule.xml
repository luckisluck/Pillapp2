<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <EditText
        android:id="@+id/editText123"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="Pill Name"
        android:inputType="textPersonName"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/editText124"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText123"
        android:layout_below="@+id/editText123"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:textSize="15dp"
        android:inputType="time"
        android:hint="Starting Time"
        />

    <EditText
        android:id="@+id/editText125"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText124"
        android:layout_alignBottom="@+id/editText124"
        android:layout_alignStart="@+id/editText126"
        android:ems="10"
        android:hint="Ending Time"
        android:inputType="time"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/editText126"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText123"
        android:layout_alignBottom="@+id/editText123"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/editText123"
        android:ems="10"
        android:hint="Pill Amt"
        android:inputType="number"
        android:textSize="15dp" />
</RelativeLayout>